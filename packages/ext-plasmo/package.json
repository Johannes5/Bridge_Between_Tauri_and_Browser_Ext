{
  "name": "shortstop",
  "displayName": "ShortStop",
  "version": "0.0.1",
  "description": "The anti doom-scrolling extension",
  "manifest": {
    "name": "Bridge Dev Extension",
    "description": "Companion extension for the MapMap bridge workspace.",
    "permissions": ["tabs", "sessions", "nativeMessaging", "windows"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "background": {
      "service_worker": "background.ts"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    }
  },
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "type-check": "plasmo typecheck",
    "build-firefox": "plasmo build --target=firefox-mv3",
    "build-chrome": "plasmo build --target=chrome-mv3",
    "build-edge": "plasmo build --target=edge-mv3",
    "build-brave": "plasmo build --target=brave-mv3",
    "build-safari": "plasmo build --target=safari-mv3",
    "build-all": "pnpm build-firefox && pnpm build-chrome && pnpm build-edge && pnpm build-brave && pnpm build-safari",
    "package": "plasmo package",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@bridge/shared-proto": "workspace:*",
    "@crxjs/vite-plugin": "^1.0.14",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mantine/core": "^7.17.8",
    "@mantine/hooks": "^7.17.8",
    "@plasmicapp/host": "^1.0.226",
    "@plasmicapp/react-web": "^0.2.404",
    "@plasmicpkgs/antd5": "^0.0.306",
    "@plasmicpkgs/lottie-react": "^0.0.219",
    "@plasmicpkgs/plasmic-embed-css": "^0.1.212",
    "@plasmicpkgs/react-aria": "^0.0.153",
    "@plasmicpkgs/react-quill": "^1.0.90",
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "^1.15.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@tanstack/react-query": "^5.90.2",
    "@types/js-cookie": "^3.0.6",
    "animate.css": "^4.1.1",
    "array-move": "^4.0.0",
    "axios": "^1.12.2",
    "classnames": "^2.5.1",
    "compare-urls": "^4.1.0",
    "detect-url-change": "^1.0.2",
    "dnd-kit": "^0.0.2",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "lucide-react": "^0.487.0",
    "match-url-wildcard": "^0.0.5",
    "plasmo": "^0.90.5",
    "popmotion": "^11.0.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^4.12.0",
    "react-markdown": "^9.1.0",
    "react-popper-tooltip": "^4.4.2",
    "react-quill": "^2.0.0",
    "rehype-raw": "^7.0.0",
    "uuid": "^11.1.0",
    "valtio": "^2.1.8",
    "vfile": "6.0.3",
    "vfile-message": "^4.0.3",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@testing-library/react": "^14.3.1",
    "@types/chrome": "0.0.258",
    "@types/lodash": "^4.17.20",
    "@types/node": "20.11.5",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "patch-package": "^8.0.1",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.18",
    "typescript": "5.3.3",
    "vite": "^4.5.14",
    "vitest": "^0.34.6"
  }
}
