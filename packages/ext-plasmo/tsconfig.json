{
  "extends": "plasmo/templates/tsconfig.base",
  "include": [
    ".plasmo/index.d.ts",
    "src/**/*",
    "components/**/*",
    "hooks/**/*",
    "constants/**/*",
    "types/**/*",
    "background/**/*",
    "utils/**/*",
    "popup/**/*",
    "content.tsx",
    "popup.tsx"
  ],
  "exclude": ["node_modules", "components/plasmic/*.css"],
  "compilerOptions": {
    "paths": {
      "~/*": ["./*"]
    },
    "baseUrl": ".",
    "verbatimModuleSyntax": false
  }
}
