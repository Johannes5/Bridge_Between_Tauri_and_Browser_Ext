{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "MapMap Test",
  "version": "0.1.0",
  "identifier": "app.mapmap.test",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MapMap Test App",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "../../sidecar/target/release/bridge-sidecar"
    ],
    "resources": [
      "resources/*",
      "../../sidecar/manifests/*"
    ]
  },
  "plugins": {
    "fs": {},
    "clipboard": {
      "all": true,
      "writeImage": true,
      "readImage": true
    },
    "process": {
      "all": true
    }
  }
}


